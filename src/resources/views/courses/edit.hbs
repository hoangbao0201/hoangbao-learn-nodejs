<div class="mt-4">
    <h1>Customize Course</h1>
    <form method="POST" action="/courses/{{course._id}}?__method=PUT">
        <div class="form-group">
            <label for="inputName">Name</label>
            <input value="{{course.name}}" type="text" class="form-control" id="inputName" name="name"/>
        </div>
        <div class="form-group">
            <label for="inputDescription">Description</label>
            <textarea type="text" class="form-control" id="inputDescription" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="inputIdVideo">idVideo</label>
            <input value="{{course.idVideo}}" type="text" class="form-control" id="inputIdVideo" name="idVideo"/>
        </div>
        
        <button type="submit" class="btn btn-primary">Add Course</button>
    </form>
</div>